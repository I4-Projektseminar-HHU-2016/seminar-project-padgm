
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.paul.hashtagworldmap.MapsActivity" >

    <fragment xmlns:map="http://schemas.android.com/apk/res-auto"
        android:id="@+id/map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        class="com.google.android.gms.maps.SupportMapFragment"/>

    <SearchView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/searchView"
        android:layout_gravity="right|top"
        android:backgroundTint="#c38f8f8f" />


    <ImageButton
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:id="@+id/menu"
        android:layout_gravity="left|top"
        android:background="@drawable/abc_ic_menu_moreoverflow_mtrl_alpha"
        android:backgroundTint="#c38f8f8f"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="7dp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/menuOpen"
        android:layout_gravity="top|left|bottom|center_horizontal|right"
        android:background="#a2000000"
        android:visibility="invisible"
        style="@style/AppTheme"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <Button
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:id="@+id/menuPoint1"
            android:layout_gravity="left|top"
            android:background="#ffffff"
            android:text="Radius"
            android:visibility="invisible"
            android:textColor="#000000"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="10dp"/>

    </FrameLayout>

</FrameLayout>