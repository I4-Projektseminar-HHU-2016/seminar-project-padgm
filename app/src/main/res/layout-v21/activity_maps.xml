
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.paul.hashtagworldmap.MapsActivity" >

    <fragment xmlns:map="http://schemas.android.com/apk/res-auto"
        android:id="@+id/map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        class="com.google.android.gms.maps.SupportMapFragment"/>


    <SearchView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/searchView"
        android:layout_gravity="right|top"/>


    <ImageButton
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:id="@+id/menu"
        android:layout_gravity="left|top"
        android:background="@drawable/abc_ic_menu_moreoverflow_mtrl_alpha"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="8dp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/menuOpen"
        android:layout_gravity="top|left|bottom|center_horizontal|right"
        android:background="#a2000000"
        android:visibility="invisible"
        style="@style/AppTheme"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <ImageButton
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:id="@+id/menuExit"
            android:layout_gravity="left|top"
            android:background="@drawable/places_ic_clear"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="8dp" />

        <Button
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:id="@+id/menuPoint1"
            android:layout_gravity="left|top"
            android:text="Radius"
            android:visibility="invisible"
            android:textColor="#ffffff"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="10dp"
            android:background="#4700ff95" />

        <Button
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:id="@+id/menuPoint2"
            android:layout_gravity="left|top"
            android:background="#4700ff95"
            android:text="Instagram"
            android:visibility="invisible"
            android:textColor="#ffffff"
            android:layout_marginTop="110dp"
            android:layout_marginLeft="10dp" />

        <Button
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:id="@+id/menuPoint3"
            android:layout_gravity="left|top"
            android:background="#4700ff95"
            android:text="Impressum"
            android:visibility="invisible"
            android:textColor="#ffffff"
            android:layout_marginTop="170dp"
            android:layout_marginLeft="10dp" />

        <Button
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:id="@+id/menuPoint4"
            android:layout_gravity="left|top"
            android:background="#4700ff95"
            android:text="Beenden"
            android:visibility="invisible"
            android:textColor="#ffffff"
            android:layout_marginTop="230dp"
            android:layout_marginLeft="10dp" />

    </FrameLayout>

</FrameLayout>