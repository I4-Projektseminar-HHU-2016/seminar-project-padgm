
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.paul.hashtagworldmap.MapsActivity" >

    <fragment xmlns:map="http://schemas.android.com/apk/res-auto"
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        class="com.google.android.gms.maps.SupportMapFragment"/>

    <SearchView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/searchView"
        android:layout_gravity="right|top" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/frameLayout2"
        android:layout_gravity="top|left|bottom|center_horizontal|right"
        android:background="#FFFFFF"
        style="@style/AppTheme">

        <ProgressBar
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:id="@+id/progressBar"
            android:layout_gravity="center_horizontal|bottom"
            android:backgroundTint="@android:color/transparent"
            android:background="@android:color/transparent"
            android:clickable="false"
            android:layout_marginBottom="120dp"
            android:focusableInTouchMode="false"/>

        <EditText
            android:layout_width="250dp"
            android:layout_height="64dp"
            android:id="@+id/editText"
            android:layout_gravity="top|bottom|center_horizontal"
            android:layout_marginTop="100dp"
            android:autoText="false"
            android:inputType="text"
            android:text="Username"
            android:textAlignment="textStart"
            android:textColor="#8c00d47c"
            android:textColorHighlight="#00000000"
            android:textColorLink="#ffffff"
            android:textSize="20dp" />

        <EditText
            android:layout_width="250dp"
            android:layout_height="64dp"
            android:id="@+id/editText2"
            android:layout_gravity="center_horizontal|top"
            android:layout_marginTop="200dp"
            android:autoText="false"
            android:inputType="textPassword|text"
            android:text="Passwort"
            android:textAlignment="textStart"
            android:textColor="#8C00D47C"
            android:textColorHighlight="#00000000"
            android:textSize="20dp" />

        <Button
            android:layout_width="158dp"
            android:layout_height="58dp"
            android:text="Anmelden"
            android:id="@+id/button"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="30dp"
            android:background="#00d47c"
            android:textColor="#ffffff"
            android:elegantTextHeight="false"
            android:contextClickable="false"
            android:clickable="true" />

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/imageView2"
            android:layout_gravity="center_horizontal|top"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/icon"/>

    </FrameLayout>

</FrameLayout>