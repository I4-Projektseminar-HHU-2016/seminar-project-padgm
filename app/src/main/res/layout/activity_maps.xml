
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.paul.hashtagworldmap.MapsActivity" >

    <fragment xmlns:map="http://schemas.android.com/apk/res-auto"
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        class="com.google.android.gms.maps.SupportMapFragment"/>

    <SearchView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/searchView"
        android:layout_gravity="right|top" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top|left|bottom|center_horizontal|right"
        android:background="#FFFFFF">

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/imageButton"
            android:layout_gravity="center_horizontal|bottom"
            android:background="#d34f4f"
            android:backgroundTint="#c76868"
            android:foreground="@drawable/mr_ic_play_light"
            android:clickable="true"
            android:adjustViewBounds="false"
            android:cropToPadding="false" />

        <ProgressBar
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:id="@+id/progressBar"
            android:layout_gravity="center_horizontal|bottom"
            android:backgroundTint="#7af480"
            android:background="#7af480"
            android:clickable="true"
            android:layout_marginBottom="100dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:layout_gravity="center_horizontal|top" />
    </FrameLayout>

</FrameLayout>